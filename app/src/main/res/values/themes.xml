<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CompMovil" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryVariant">@color/blue_10</item>
        <item name="colorOnPrimary">@color/blue_30</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_30</item>
        <item name="colorSecondaryVariant">@color/red_50</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.CompMovil">
        <item name="android:windowBackground">@drawable/androidsplash</item>
    </style>
</resources>